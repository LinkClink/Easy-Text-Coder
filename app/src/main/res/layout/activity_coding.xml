<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Coding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/coding_open_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open .txt"
            android:onClick="onClick"
            />

        <Button
            android:id="@+id/coding_save_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to .txt"
            android:onClick="onClick"
            />


        <GridLayout>
            <Button
                android:id="@+id/coding_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coding" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLength="3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press number >= 999"
                android:textSize="15dp"
                />

            <Switch
                android:id="@+id/random_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="0"
                android:text="Random" />

        </GridLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Press paste text to Coding"
            android:textSize="16dp"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/editview_coding"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </ScrollView>

    </TableLayout>

</LinearLayout>