<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Decoding">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/decoding_open_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open .txt" />

        <Button
            android:id="@+id/decoding_save_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save to .txt" />


        <GridLayout>
            <Button
                android:id="@+id/decoding_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decoding" />
            <EditText
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:maxLength="3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press number >= 999"
                android:textSize="15dp"
                />

        </GridLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Press paste text to Decoding"
            android:textSize="16dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/about_program"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </ScrollView>

    </TableLayout>

</LinearLayout>